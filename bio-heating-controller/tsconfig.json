{
  "compilerOptions": {
    "target": "ES6",                   // Target a modern JavaScript version (or ESNext)
    "module": "ESNext",                // Use ES Module syntax
    "moduleResolution": "Node",        // Resolve modules like Node.js
    "outDir": "./dist",    
    "rootDir": "./../",            // Specify the output directory for compiled files
    "strict": true,                    // Enable strict type-checking
    "esModuleInterop": true,           // Enable interoperability for CommonJS modules
    "skipLibCheck": true,              // Skip type-checking for library files
    "resolveJsonModule": true,         // Enable importing JSON files
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": ["./src/**/*", "../shared/*"],
  "exclude": ["node_modules"]
}
